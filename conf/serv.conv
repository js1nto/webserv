server {
    host 127.0.0.1;
    port 8080;
    server_name localhost;

    error_page 404 ./www/errors/404.html;
    client_max_body_size 10M;

  # Main route
  location / {
    root ./www;
    index index.html;
    autoindex off;
    allowed_methods GET;
  }

  # File upload support
  location /upload {
    root ./www;
    upload_dir ./uploads;
    allowed_methods POST;
  }

  # CGI route (Python example)
  location /cgi {
    root ./cgi-bin;
    cgi_extension .py;
    allowed_methods GET POST;
  }

  # redirect example that should be a 404
  location /old-page {
    redirect /;
  }

  # Directory listing example
  location /files {
    root ./www;
    autoindex on;
    allowed_methods GET;
  }


  # just for a 403 req
  location /null {
    root ./www;
    autoindex off;
    allowed_methods GET;
  }
}


# server2 - simulate api call (renders a .json)
server {
    host 127.0.0.1;
    port 8082;

    error_page 404 ./www/errors/404.html;

    client_max_body_size 500000;
    server_name api.com;

    location /api {
        root ./www/api;
        methods GET;
        autoindex off;
        index index.json;
    }
}

# server3 - same port diff server name (shouldnt work and get catched by the parser)
server {
    host 127.0.0.1;
    port 8080;
    server_name apiABC.com;

    client_max_body_size 5M;

    error_page 404 ./www/errors/404.html;

    route /api {
        methods GET POST;
        root ./www/api;
        index index.json;
    }

    route /api/upload {
        methods POST;
        upload_store ./www/api/uploads;
    }
}


# sever5 - On a different port GET renders the same index.html
server {
    host 127.0.0.1;
    port 9091;
    server_name files.local;

    error_page 404 /errors/404.html;

    client_max_body_size 50M;

    route /public {
        methods GET;
        root ./public;
        autoindex on;
        index index.html;
    }
}   


# sever6 - On a different port GET renders a special -> special.html
